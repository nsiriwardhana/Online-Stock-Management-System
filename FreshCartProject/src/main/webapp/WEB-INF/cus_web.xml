<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
		version="3.1">
		
		
	<servlet>
		<servlet-name>cus_login</servlet-name>
		<servlet-class>com.customer.cus_loginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>cus_login</servlet-name>
		<url-pattern>/cus_loginServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>cus_payment</servlet-name>
		<servlet-class>com.customer.cus_paymentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>cus_payment</servlet-name>
		<url-pattern>/cus_paymentServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UpdateCustomer</servlet-name>
		<servlet-class>com.customer.UpdateCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateCustomer</servlet-name>
		<url-pattern>/UpdateCustomerServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DeleteCustomer</servlet-name>
		<servlet-class>com.customer.DeleteCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteCustomer</servlet-name>
		<url-pattern>/DeleteCustomerServlet</url-pattern>
	</servlet-mapping>
	
</web-app>